<%= stylesheet_link_tag 'new', :media => "all" %>
<div class="back-box">
<div class="post-container">

  <p class="title">New Post</p>
  <%= form_for(@book, :url => { controller:'books', action:'create'})do |f| %>

  <div class="field-1">
    <%= f.label :title %>
    <%= f.text_field :title, :size => 30 %>
  </div>

  <div class="field-2">
    <%= f.label :author %>
    <%= f.text_field :author, :size => 30 %>
  </div>

  <div class="field-3">
  <%= f.label :about  %>
  <%= f.text_area :about, :size => "30x2" %>
</div>

  <div class="field-4">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>


  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", books_path %>
</div>
</div>